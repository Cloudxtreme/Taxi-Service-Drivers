.orders {
    max-width: 400px;
    .order__container {
        display: flex;
        flex-direction: column;
        background: #fff;
        margin-bottom: 10px;
        p {
            margin:0;
            border-bottom: 1px solid #999;
            padding: 10px;
        }
        h2 {
            padding: 10px;
        }
    }
    .order__complete {
        background: #fff;
        margin-bottom: 10px;
        p {
            margin: 0
            border-bottom: 1px solid #999;
            padding: 10px;
        }
    }
}